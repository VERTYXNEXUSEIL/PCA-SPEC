{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/action_ir.schema.json",
  "title": "PCA Action IR",
  "type": "object",
  "additionalProperties": false,
  "required": ["action_type", "parameters", "required_capabilities"],
  "properties": {
    "action_type": {"type": "string", "minLength": 1},
    "parameters": {"type": "object", "additionalProperties": true},
    "required_capabilities": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "predicted_effect": {"type": "string"},
    "egress_class": {"type": "string"}
  }
}
